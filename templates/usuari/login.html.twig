{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
<h1>Login d'usuaris</h1>
{% if error %}
<div class="alert alert-error">
    {{ error.messagekey|trans(error.messageData, 'security') }}
    
</div>
{% endif %}

    <form action="" {{ path ('login') }} method="POST">
        <label for="username">Email</label>
        <input placeholder= "Posa el Email" type="email" id="username" name="_username" value="{{ lastUsername }}"/>
        <label for="password">Password</label>
        <input placeholder= "Posa la Password" type="password" id="password" name="_password" />
        <div class="clearfix"></div>
        <input type="submit" value="login"/>
    </form>

</div>
{% endblock %}
